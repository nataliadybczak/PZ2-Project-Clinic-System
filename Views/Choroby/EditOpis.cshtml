@model MediCode.Models.Choroba

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj opis choroby</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOpis">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" type="date" readonly />
                <div class="form-group">
                    <label asp-for="Opis" class="control-label"></label>
                    <textarea asp-for="Opis" class="form-control"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}