@model MediCode.Models.Lekarz

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj dane lekarza</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specjalizacja" class="control-label"></label>
                <input asp-for="Specjalizacja" class="form-control" />
                <span asp-validation-for="Specjalizacja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input type="text" class="form-control" name="Login" value="@Model.Login" readonly />
            </div>
            <div class="form-group">
                <label for="haslo" class="control-label">Nowe has≈Ço (opcjonalnie)</label>
                <input type="password" class="form-control" name="haslo" />
            </div>
            @* <div class="form-group form-check mt-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                </label>
            </div> *@
            <div class="form-group mt-3">
                <input type="submit" value="Zapisz" class="btn text-white" style="background-color: #6d156d;" />
                <a asp-action="Index" class="btn" style="background-color: #c793c7">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
