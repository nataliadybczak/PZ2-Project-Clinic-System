@model MediCode.Models.Wizyta

@{
    ViewData["Title"] = "Edytuj wizytę";
}

<h1>Edytuj wizytę</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataWizyty" class="control-label"></label>
                <input asp-for="DataWizyty" class="form-control" />
                <span asp-validation-for="DataWizyty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control"
                    asp-items="Html.GetEnumSelectList<StatusWizyty>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacjentId" class="control-label"></label>
                <select asp-for="PacjentId" class="form-control" asp-items="ViewBag.PacjentId">
                    <option value="">-- brak pacjenta --</option>
                </select>
                <span asp-validation-for="PacjentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
