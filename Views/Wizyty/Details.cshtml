@model MediCode.Models.Wizyta

@{
    ViewData["Title"] = "Szczegóły wizyty";
}

<h1>Szczegóły wizyty</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataWizyty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataWizyty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pacjent)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == StatusWizyty.Dostepna || Model.Pacjent == null)
            {
                <span class="text-muted"></span>
            }
            else
            {
                <span>@($"{Model.Pacjent.Imie} {Model.Pacjent.Nazwisko} ({Model.Pacjent.Pesel})")</span>
            }
        </dd>
    </dl>
</div>
<div class="d-flex gap-2 mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn" style="background-color: #ffe6f0;">Edytuj</a>
    <a asp-action="Index" class="btn" style="background-color: rgb(199, 147, 199);">Powrót</a>
</div>
