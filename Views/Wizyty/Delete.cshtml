@model MediCode.Models.Wizyta

@{
    ViewData["Title"] = "Usuń wizytę";
}

<h1>Usuń wizytę</h1>

<h3>Czy jesteś pewien, że chcesz usunąć tę wizytę?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataWizyty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataWizyty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pacjent)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == StatusWizyty.Dostepna || Model.Pacjent == null)
            {
                <span class="text-muted"></span>
            }
            else
            {
                <span>@($"{Model.Pacjent.Imie} {Model.Pacjent.Nazwisko} ({Model.Pacjent.Pesel})")</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn text-white" style="background-color: #ff0066;" />
        <a asp-action="Index" class="btn" style="background-color: #c793c7;">Anuluj</a>
    </form>
</div>
