@model IEnumerable<MediCode.Models.Wizyta>

@{
    ViewData["Title"] = "Wizyty";
}

<h1>Wizyty</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="background-color: #C70B76; border-color: #BC0B6F;">Dodaj
        wizytę</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataWizyty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacjent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataWizyty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (item.Status == StatusWizyty.Dostepna || item.Pacjent == null)
                    {
                        <span class="text-muted"></span>
                    }
                    else
                    {
                        <span>@item.Pacjent.Imie @item.Pacjent.Nazwisko (@item.Pacjent.Pesel)</span>
                    }
                </td>
                <td class="text-center align-middle">
                    <div class="d-flex w-100 gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm flex-fill"
                            style="background-color: #ffe6f0;">Edytuj</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm flex-fill"
                            style="background-color:  #ffb3d1;">Szczegóły</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm text-white flex-fill"
                            style="background-color: #ff0066;">Usuń</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
