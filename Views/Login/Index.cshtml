@{
    ViewData["Title"] = "Logowanie";
}
<div class="text-center">
    <h1 class="display-4">Logowanie</h1>
    <p>Wprowadź swoje dane logowania.</p>
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    <form asp-controller="Login" asp-action="Index" method="post" class="mx-auto" style="max-width: 400px;">
        <div class="form-group mb-4">
            <label for="login" class="mb-2">Nazwa użytkownika</label>
            <input type="text" class="form-control" id="login" name="login" required />
        </div>
        <div class="form-group mb-4">
            <label for="haslo" class="mb-2">Hasło</label>
            <input type="password" class="form-control" id="haslo" name="haslo" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3"
            style="background-color: #C70B76; border-color: #BC0B6F;">Zaloguj się</button>
    </form>
</div>